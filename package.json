{
    "private": true,
    "author": "ORDBOK contributors",
    "bugs": "https://github.com/ordbok/core/issues",
    "description": "Dictionary system",
    "homepage": "https://github.com/ordbok/core#readme",
    "license": "MIT",
    "main": "lib/ordbok-core.js",
    "name": "@ordbok/core",
    "repository": "https://github.com/ordbok/core.git",
    "types": "dist/lib/index.d.ts",
    "version": "0.1.0",
    "bin": {
        "ordbok-assembler": "dist/bin/ordbok-assembler.js"
    },
    "dependencies": {},
    "devDependencies": {
        "@ordbok/typedoc-theme": "^0.5.0",
        "@types/node": "^10.0.0",
        "browserify": "^16.5.0",
        "husky": "~3.0.9",
        "typedoc": "~0.15.0",
        "typescript": "~3.7.2"
    },
    "engines": {
        "node": ">=10.0.0"
    },
    "files": [
        "bin/",
        "lib/",
        "plugins/",
        "AUTHORS.md",
        "CODE_OF_CONDUCT.md",
        "LICENSE",
        "README.md"
    ],
    "husky": {
        "hooks": {
            "pre-commit": "npm run build && npm test"
        }
    },
    "keywords": [
        "dictionary",
        "ordbok"
    ],
    "scripts": {
        "build": "npm run build-clean && npm run build-1 && npm run build-2 && npm run build-3 && npm run build-4",
        "build-1": "tsc --build sources/typedoc.json sources",
        "build-2": "browserify --debug --outfile lib/ordbok-core.src.js --standalone ordbok-core lib/ordbok-core.js && browserify --outfile lib/ordbok-core.js --standalone ordbok-core lib/ordbok-core.js",
        "build-3": "chmod +x bin/ordbok-assembler.js",
        "build-4": "cd sources && typedoc --out ../docs --tsconfig typedoc.json",
        "build-clean": "rm -rf bin lib dist docs plugins",
        "clean": "npm run build-clean && tests-clean",
        "release": "npm publish --access=public --tag next",
        "release-as-stable": "npm run release && npm publish --access=public",
        "test": "npm run tests",
        "tests": "npm run tests-clean && npm run tests-build && npm run tests-clean",
        "tests-build": "tsc --build tests && cd tests-build && node index.js",
        "tests-clean": "rm -rf tests-build",
        "watch": "tsc --build sources --watch"
    }
}
