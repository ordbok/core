	],
	"main": "dist/lib/index.js",
	"scripts": {
		"build": "npm run clean && npm run build-1 && npm run build-2 && npm run build-3",
		"build-1": "tsc --build tsconfig.json tsconfig-client.json",
		"build-2": "r_js -o rjsconfig-client.js",
		"build-3": "chmod +x dist/bin/ordbok-assembler.js",
		"clean": "rm -rf dist",
		"watch": "tsc --build tsconfig.json --watch"
	},
	"types": "dist/lib/index.d.ts"
